<div class="top">
  <div class="limiter">
    <div class="floatL">
      <h1><a href="<%= root_url %>" title="Sitter Calling"><span class="alt">Sitter Calling</span></a></h1>
    </div>
    <div class="floatR">
      <% session_for_form = (@user_session or UserSession.new) %>
      <%= form_for session_for_form, :html => { :class => 'login' } do |f| %>
        <table>
          <tbody>
            <tr>
			        <td><%= f.label :email %></td>
			        <td><%= f.label :password %></td>
 			        <td><%= link_to "Password Reset", new_reset_password_path %></td>
            </tr>
            <tr>
			        <td><%= f.text_field :email, :class => 'short' %></td>
			        <td><%= f.password_field :password, :class => 'short' %></td>
              <td><%= f.submit "Sign In", :class => 'scButton' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>