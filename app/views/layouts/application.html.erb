<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag 'stylesheet' %>
    <%= javascript_include_tag :all %>
  </head>
  <body
  <%= notice %>
  <%= debug(params) if Rails.env.development? %>
  <div class="home">
      <div class="container">
		  
          <% if (current_user) %>
			<%= render("shared/header")%>
		  <% else %>
			<%= render("shared/header_login")%>
		  <% end %>

		  <%= yield %>
		
		  <div class="gradient"></div>
		  <%= render("shared/footer")%>
	    </div>

  </div>
  </body>
</html>